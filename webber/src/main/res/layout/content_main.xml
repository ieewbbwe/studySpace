<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.webber.webberdemo.MainActivity"
        tools:showIn="@layout/activity_main">

        <Button
            android:id="@+id/recycle_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_recycle"/>

        <Button
            android:id="@+id/snack_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_snack"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/test_tv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:elevation="1dip"
                android:gravity="center"
                android:text="test"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:elevation="4dip"
                android:gravity="center"
                android:text="test"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:elevation="8dip"
                android:gravity="center"
                android:text="test"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/test_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="top CardView包裹"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:elevation="4dp"
            android:text="top Elevation 4dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:text="bottom elevation 1dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="800dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:background="@android:color/white"
                android:text="bottom CardView 包裹"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:text="bottom elevation 4dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@android:color/white"
            android:elevation="6dp"
            android:text="bottom elevation 6dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1500dp"/>


    </LinearLayout>

</ScrollView>

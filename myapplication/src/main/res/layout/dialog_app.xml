<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/MyDialogStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/app_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#de333333"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="標題"/>

        <TextView
            android:id="@+id/app_dialog_descri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:textColor="#464e56"
            android:textSize="14sp"
            tools:text="一二三四五六七八九十一二三四五六七八九十一一二三四五六七八九十一二三四五六七八九十一一二三四五六七八九十一二三四五六七八九十一一二三四五六七八九十一二三四五六七八九十一"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/app_dialog_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/button_cancel"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/app_dialog_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_ok"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
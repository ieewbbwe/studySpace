<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/contact_phone_num" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke android:width="1dp"
                    android:color="@color/contact_phone_num"/>
            <solid android:color="@color/bg_white"/>
            <padding android:bottom="4dp" android:left="12dp" android:right="12dp" android:top="4dp"/>
        </shape>
    </item>

    <item android:color="@color/filter_text_color" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/bg_white"/>
            <padding android:bottom="4dp" android:left="12dp" android:right="12dp" android:top="4dp"/>
        </shape>
    </item>

</selector>